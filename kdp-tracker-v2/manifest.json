{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "1.0.1",
  "description": "Track your Amazon KDP sales automatically",
  "permissions": [
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://kdp.amazon.com/*",
    "https://kdp.amazon.co.uk/*",
    "https://kdp.amazon.de/*",
    "https://kdp.amazon.fr/*",
    "https://kdp.amazon.ca/*",
    "https://kdp.amazon.com.au/*",
    "https://kdpreports.amazon.com/*",
    "https://gabaritkdp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}