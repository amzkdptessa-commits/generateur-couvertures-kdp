{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "1.0.6",
  "description": "Track your Amazon KDP sales",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://kdpreports.amazon.com/*",
    "http://localhost/*",
    "https://gabaritkdp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gabaritkdp.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://kdpreports.amazon.com/*"],
      "js": ["kdp-content.js"],
      "run_at": "document_end"
    }
  ]
}
