{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "description": "Track your Amazon KDP royalties automatically",
  "version": "1.0.4",

  "permissions": [
    "cookies",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://kdpreports.amazon.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://kdpreports.amazon.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
