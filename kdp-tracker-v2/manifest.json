{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "1.2.0",
  "description": "Synchronise les rapports KDP et alimente le dashboard GabaritKDP Tracker.",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "alarms"
  ],
  "host_permissions": [
    "https://kdpreports.amazon.com/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.com/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.au/*",
    "http://127.0.0.1:3001/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
