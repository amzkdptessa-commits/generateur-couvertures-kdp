{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "1.0.2",
  "description": "Track your Amazon KDP sales automatically",
  "permissions": [
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://kdp.amazon.com/*",
    "https://kdp.amazon.co.uk/*",
    "https://kdp.amazon.de/*",
    "https://kdp.amazon.fr/*",
    "https://kdp.amazon.ca/*",
    "https://kdp.amazon.com.au/*",
    "https://kdpreports.amazon.com/*",
    "https://gabaritkdp.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gabaritkdp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}