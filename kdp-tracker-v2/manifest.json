{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "0.7.0",
  "description": "Synchronise vos rapports KDP (KDP Reports) vers votre base Supabase.",
  "action": {
    "default_title": "GabaritKDP Tracker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://kdpreports.amazon.com/*",
    "https://kdp.amazon.com/*",
    "https://www.amazon.com/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.au/*",
    "https://*.supabase.co/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}