{
  "manifest_version": 3,
  "name": "GabaritKDP Tracker",
  "version": "1.0.2",
  "description": "Track your Amazon KDP sales automatically",
  "permissions": ["cookies"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://kdpreports.amazon.com/*",
    "https://gabaritkdp.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gabaritkdp.com/*"],
      "js": ["dashboard-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
