{
  "name": "gabaritkdp-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "echo \"No tests yet\"",
    "start": "node server.js",

    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
